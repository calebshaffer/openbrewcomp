<table class="reporttable">
  <thead>
    <tr class="table-header">
      <th>Team Name</th>
      <th>Club</th>
      <th class="numeric">Entries</th>
    </tr>
  </thead>
  <tfoot>
    <tr class="table-footer">
      <th colspan="3">&nbsp;</th>
    </tr>
  </tfoot>
  <tbody>
    <%- if teams.length > 0 -%>
      <%- teams.each do |record| -%>
        <tr class="<%= cycle('even-record', 'odd-record') %>">
          <td><%= h record.name %></td>
          <td><%= h record.club.name %></td>
          <td class="numeric"><%= record.entry_count %></td>
        </tr>
      <%- end -%>
    <%- else -%>
      <tr>
        <td colspan="2" align="center"><em>No team entries could be found</em></td>
      </tr>
    <%- end -%>
  </tbody>
</table>
